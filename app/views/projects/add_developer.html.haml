%section.content-header
  %h2 Add Developers
%section.content
  = form_tag assign_developers_projects_path do
    = hidden_field_tag "project_id", @project.id
    %table
      %thead
        %tr
          %th
      %tbody
        - @developers.each do |developer|
          %tr
            %td
              = check_box_tag "developer[]", developer.id
              = developer.email
    = submit_tag "Add"